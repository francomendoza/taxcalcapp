<h1>New Stock Transaction</h1>
<%= form_for @stock_transaction do |f| %>
  <div>
    <%= f.label :stock %>
    <%= f.collection_select :stock_id, @stocks, :id, :symbol, prompt: true %>
  </div>

  <div>
    <%= f.label :user_id %>
    <%= f.text_field :user_id %>
  </div>

  <div>
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>

  <div>
    <%= f.label :type_of %>
    <%= f.text_field :type_of %>
  </div>

  <div>
    <%= f.label :date %>
    <%= f.datetime_field :date %>
  </div>

  <%= f.submit %>
<% end %>